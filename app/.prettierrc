{
  "singleQuote": true,
  "trailingComma": "none",
  "jsxSingleQuote": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrderSeparation": true,
  "importOrder": [
    "^@remix-run/(.*)$",
    "react",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "decorators-legacy", "jsx"]
}
